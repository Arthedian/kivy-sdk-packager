for f in Kivy*.app
do
    if [ -d /Applications/"$f" ];
    then
        IFS='.' read -ra ADDR <<< "$f"
        lowercase=`echo $ADDR | tr '[A-Z]' '[a-z]'`
        ln -s /Applications/"$f"/Contents/Resources/script /usr/local/bin/"$lowercase"
        osascript -e 'display notification "Symlink created" with title "Kivy: Make Symlinks"'
    else
        osascript -e 'display notification " '$f' does not exist in /Applications." with title "Kivy: Make Symlinks"'
    fi
done
